<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.input.KeyCodeCombination?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Rectangle?>

<BorderPane xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="tunecomposer.TuneComposer">
   <center>
      <ScrollPane fx:id="compositionScroll">
         <content>
                                 <Rectangle fx:id="redline" arcHeight="5.0" arcWidth="5.0" fill="RED" height="1280.0" stroke="RED" strokeType="INSIDE" visible="false" width="1.0" x="-1000.0" y="0.0" />

            <AnchorPane fx:id="rectStackPane" layoutY="30.0" prefHeight="1280.0" prefWidth="2000.0">
               <children>
                    <Pane fx:id="compositionGrid" onMouseDragged="#gridDrag" onMousePressed="#gridClick" onMouseReleased="#gridRelease" prefHeight="1280.0" prefWidth="2000.0" styleClass="compositionPane" stylesheets="@tunecomposer.css">
                    </Pane>
                    </children>
            </AnchorPane>
            </content>
        </ScrollPane>
    </center>
    <top>
        <MenuBar BorderPane.alignment="CENTER">
            <menus>
                <Menu text="File">
                    <items>
                        <MenuItem fx:id="ExitButton" onAction="#handleExitAction" text="Exit">
                            <accelerator>
                                <KeyCodeCombination alt="UP" code="Q" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
                            </accelerator>
                        </MenuItem>
                    </items>
                </Menu>
            <Menu mnemonicParsing="false" text="Edit">
              <items>
                <MenuItem mnemonicParsing="false" onAction="#selectAll" text="Select All" />
                  <MenuItem mnemonicParsing="false" onAction="#delete" text="Delete" />
              </items>
            </Menu>
                <Menu text="Action">
                    <items>
                        <MenuItem fx:id="PlayButton" onAction="#handlePlayAction" text="Play">
                            <accelerator>
                                <KeyCodeCombination alt="UP" code="P" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
                            </accelerator>
                        </MenuItem>
                        <MenuItem fx:id="StopButton" onAction="#handleStopAction" text="Stop">
                            <accelerator>
                                    <KeyCodeCombination alt="UP" code="S" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
                                    </accelerator>
                        </MenuItem>
                    </items>
                </Menu>
            </menus>
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
        </MenuBar>
    </top>
   <left>
      <TabPane BorderPane.alignment="CENTER">
         <BorderPane.margin>
            <Insets top="10.0" />
         </BorderPane.margin>
         <tabs>
            <Tab closable="false" text="Instruments">
               <content>
                  <VBox spacing="50.0">
                     <children>
                        <RadioButton mnemonicParsing="false" onAction="#handlePianoAction" selected="true" text="Piano" textFill="OLIVEDRAB">
                           <toggleGroup>
                              <ToggleGroup fx:id="instrumentsRadioButton" />
                           </toggleGroup>
                        </RadioButton>
                        <RadioButton layoutX="10.0" layoutY="10.0" mnemonicParsing="false" onAction="#handleHarpsichordAction" text="Harpsichord" textFill="LAWNGREEN" toggleGroup="$instrumentsRadioButton" />
                        <RadioButton layoutX="10.0" layoutY="10.0" mnemonicParsing="false" onAction="#handleMarimbaAction" text="Marimba" textFill="SEAGREEN" toggleGroup="$instrumentsRadioButton" />
                        <RadioButton layoutX="10.0" layoutY="10.0" mnemonicParsing="false" onAction="#handleOrganAction" text="Organ" textFill="LIGHTSKYBLUE" toggleGroup="$instrumentsRadioButton" />
                        <RadioButton layoutX="10.0" layoutY="28.0" mnemonicParsing="false" onAction="#handleAccordionAction" text="Accordion" textFill="#00d4f5" toggleGroup="$instrumentsRadioButton" />
                        <RadioButton layoutX="10.0" layoutY="46.0" mnemonicParsing="false" onAction="#handleGuitarAction" prefHeight="18.0" prefWidth="73.0" text="Guitar" textFill="#0084ff" toggleGroup="$instrumentsRadioButton" />
                        <RadioButton layoutX="10.0" layoutY="46.0" mnemonicParsing="false" onAction="#handleViolinAction" text="Violin" textFill="#1745ff" toggleGroup="$instrumentsRadioButton" />
                        <RadioButton layoutX="10.0" layoutY="64.0" mnemonicParsing="false" onAction="#handleFrenchHornAction" text="French Horn" textFill="#7102f0" toggleGroup="$instrumentsRadioButton" />
                     </children>
                     <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="20.0" />
                     </padding>
                  </VBox>
               </content>
            </Tab>
            <Tab closable="false" text="Sound Effects">
              <content>
                  <VBox spacing="50.0">
                     <children>
                        <RadioButton mnemonicParsing="false" text="Echoes" textFill="RED" toggleGroup="$instrumentsRadioButton" />
                        <RadioButton mnemonicParsing="false" text="Choir" textFill="#ff6f00" toggleGroup="$instrumentsRadioButton" />
                        <RadioButton mnemonicParsing="false" text="Rain" textFill="#979650" toggleGroup="$instrumentsRadioButton" />
                        <RadioButton mnemonicParsing="false" text="Soundtrack" textFill="#727272" toggleGroup="$instrumentsRadioButton" />
                        <RadioButton mnemonicParsing="false" onAction="#handleGoblinsAction" text="Goblins" toggleGroup="$instrumentsRadioButton" />
                        <RadioButton mnemonicParsing="false" text="SciFi" textFill="#570000" toggleGroup="$instrumentsRadioButton" />
                        <RadioButton mnemonicParsing="false" text="Applause" textFill="#654800" toggleGroup="$instrumentsRadioButton" />
                     </children>
                     <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="20.0" />
                     </padding>
                  </VBox>
              </content>
            </Tab>
         </tabs>
      </TabPane>
   </left>
</BorderPane>
