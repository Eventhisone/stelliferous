<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Line?>

<BorderPane stylesheets="@TuneComposer.css" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.TuneComposerNoteSelection">
   <center>
      <ScrollPane fx:id="compositionScroll">
         <content>
            <AnchorPane fx:id="rectAnchorPane" layoutY="30.0" prefHeight="1280.0" prefWidth="2000.0">
               <children>           
                    <Pane fx:id="compositionPane" onMouseDragged="#paneMouseDrag" onMousePressed="#paneMouseClick" onMouseReleased="#paneMouseRelease" prefHeight="1280.0" prefWidth="2000.0">
                     <children>
                        <fx:include source="TuneComposerBackground.fxml" />                                   
                     </children>
                    </Pane>
                  <Line fx:id="redLine" endX="0.0" endY="1280.0" startX="0.0" startY="0.0" styleClass="redLine" />
                        
               </children>
            </AnchorPane>
            </content>
            
        </ScrollPane>
    </center>
    <top>
        <MenuBar BorderPane.alignment="CENTER">
            <menus>
                <Menu text="File">
                    <items>
                        <MenuItem fx:id="ExitButton" accelerator="Shortcut+Q" onAction="#handleExitAction" text="Exit" />
                    </items>
                </Menu>
            <Menu text="Edit">
              <items>
                <MenuItem accelerator="Shortcut+A" onAction="#handleSelectAllAction" text="Select All" />
                <MenuItem accelerator="backspace" onAction="#handleDeleteAction" text="Delete" />
                <MenuItem accelerator="Shortcut+C" onAction="#handleClearAction" text="Clear" />  
              </items>
            </Menu>
                <Menu text="Action">
                    <items>
                        <MenuItem fx:id="PlayButton" accelerator="Shortcut+P" onAction="#handlePlayAction" text="Play" />
                        <MenuItem fx:id="StopButton" accelerator="Shortcut+S" onAction="#handleStopAction" text="Stop" />
                    </items>
                </Menu>
            </menus>
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
        </MenuBar>
    </top>
   <left>
      <TabPane BorderPane.alignment="CENTER">
         <BorderPane.margin>
            <Insets top="10.0" />
         </BorderPane.margin>
         <tabs>
            <Tab closable="false" text="Instruments">
               <content>
                  <VBox spacing="50.0">
                     <children>
                        <RadioButton onAction="#handlePianoAction" selected="true" styleClass="pianoButton" text="Piano">
                           <toggleGroup>
                              <ToggleGroup fx:id="instrumentsRadioButton" />
                           </toggleGroup>
                        </RadioButton>
                        <RadioButton onAction="#handleHarpsichordAction" styleClass="harpsichordButton" text="Harpsichord" toggleGroup="$instrumentsRadioButton" />
                        <RadioButton onAction="#handleMarimbaAction" styleClass="marimbaButton" text="Marimba" toggleGroup="$instrumentsRadioButton" />
                        <RadioButton onAction="#handleOrganAction" styleClass="organButton" text="Organ" toggleGroup="$instrumentsRadioButton" />
                        <RadioButton onAction="#handleAccordionAction" styleClass="accordionButton" text="Accordion" toggleGroup="$instrumentsRadioButton" />
                        <RadioButton onAction="#handleGuitarAction" styleClass="guitarButton" text="Guitar" toggleGroup="$instrumentsRadioButton" />
                        <RadioButton onAction="#handleFrenchHornAction" styleClass="frenchHornButton" text="French Horn" toggleGroup="$instrumentsRadioButton" />
                        <RadioButton onAction="#handleViolinAction" styleClass="violinButton" text="Violin" toggleGroup="$instrumentsRadioButton" />
                     </children>
                     <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="20.0" />
                     </padding>
                  </VBox>
               </content>
            </Tab>
            <Tab closable="false" text="Sound Effects">
              <content>
                  <VBox spacing="50.0">
                     <children>
                        <RadioButton onAction="#handleChoirAction" styleClass="choirButton" text="Choir" toggleGroup="$instrumentsRadioButton" />
                        <RadioButton onAction="#handleTypewriterAction" styleClass="typewriterButton" text="Typewriter" toggleGroup="$instrumentsRadioButton" />
                        <RadioButton onAction="#handleSeaAction" text="Sea" toggleGroup="$instrumentsRadioButton" />
                        <RadioButton onAction="#handleApplauseAction" styleClass="applauseButton" text="Applause" toggleGroup="$instrumentsRadioButton" />
                     </children>
                     <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="20.0" />
                     </padding>
                  </VBox>
              </content>
            </Tab>
         </tabs>
      </TabPane>
   </left>
</BorderPane>
