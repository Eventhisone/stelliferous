<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Line?>

<BorderPane stylesheets="@/tunecomposer/TuneComposer.css" 
            xmlns="http://javafx.com/javafx/8.0.111"
            xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="controller.TuneComposerNoteSelection">
   <center>
      <ScrollPane fx:id="compositionScroll">
         <content>
            <AnchorPane fx:id="rectAnchorPane" 
                        layoutY="30.0" 
                        prefHeight="1280.0" 
                        prefWidth="2000.0">
               <children>           
                    <Pane fx:id="compositionPane" 
                          onMouseDragged="#paneMouseDrag" 
                          onMousePressed="#paneMouseClick" 
                          onMouseReleased="#paneMouseRelease" 
                          prefHeight="1280.0" 
                          prefWidth="2000.0">
                     <children>
                        <fx:include source="TuneComposerBackground.fxml" />
                        <Line fx:id="redLine" 
                              endX="0.0" 
                              endY="1280.0" 
                              startX="0.0" 
                              startY="0.0" 
                              styleClass="redLine" />                                   
                     </children>
                    </Pane>
                        
               </children>
            </AnchorPane>
            </content>
            
        </ScrollPane>
    </center>
    <top>
        <MenuBar BorderPane.alignment="CENTER">
            <menus>
                <Menu text="File">
                    <items>
                        <MenuItem fx:id="ExitButton" 
                                  accelerator="Shortcut+Q" 
                                  onAction="#handleExitAction" 
                                  text="Exit" />
                    </items>
                </Menu>
            <Menu text="Edit">
              <items>
                <MenuItem accelerator="Shortcut+A" 
                          onAction="#handleSelectAllAction" 
                          text="Select All" />
                <MenuItem accelerator="Shortcut+D" 
                          onAction="#handleDeleteAction" 
                          text="Delete" />
                <MenuItem accelerator="Shortcut+C" 
                          onAction="#handleClearAction" 
                          text="Clear" />  
              </items>
            </Menu>
                <Menu text="Action">
                    <items>
                        <MenuItem fx:id="PlayButton" 
                                  accelerator="Shortcut+P" 
                                  onAction="#handlePlayAction" 
                                  text="Play" />
                        <MenuItem fx:id="StopButton" 
                                  accelerator="Shortcut+S" 
                                  onAction="#handleStopAction" 
                                  text="Stop" />
                    </items>
                </Menu>
            </menus>
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
        </MenuBar>
    </top>
   <left>
      <TabPane BorderPane.alignment="CENTER">
         <BorderPane.margin>
            <Insets top="10.0" />
         </BorderPane.margin>
         <tabs>
            <Tab closable="false" 
                 text="Instruments">
               <content>
                  <VBox spacing="50.0">
                     <children>
                        <RadioButton styleClass="pianoButton" 
                                     onAction="#handlePianoAction" 
                                     selected="true" 
                                     text="Piano">
                           <toggleGroup>
                              <ToggleGroup fx:id="instrumentsRadioButton" />
                           </toggleGroup>
                        </RadioButton>
                        <RadioButton styleClass="harpsichordButton"  
                                     onAction="#handleHarpsichordAction" 
                                     text="Harpsichord" 
                                     toggleGroup="$instrumentsRadioButton" />
                        <RadioButton styleClass="marimbaButton"  
                                     onAction="#handleMarimbaAction" 
                                     text="Marimba" 
                                     toggleGroup="$instrumentsRadioButton" />
                        <RadioButton styleClass="organButton"  
                                     onAction="#handleOrganAction"
                                     text="Organ" 
                                     toggleGroup="$instrumentsRadioButton" />
                        <RadioButton styleClass="accordionButton" 
                                     onAction="#handleAccordionAction" 
                                     text="Accordion" 
                                     toggleGroup="$instrumentsRadioButton" />
                        <RadioButton styleClass="guitarButton" 
                                     onAction="#handleGuitarAction"  
                                     text="Guitar" 
                                     toggleGroup="$instrumentsRadioButton" />
                        <RadioButton styleClass="violinButton" 
                                     onAction="#handleViolinAction" 
                                     text="Violin" 
                                     toggleGroup="$instrumentsRadioButton" />
                        <RadioButton styleClass="frenchHornButton"  
                                     onAction="#handleFrenchHornAction" 
                                     text="French Horn" 
                                     toggleGroup="$instrumentsRadioButton" />
                     </children>
                     <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="20.0" />
                     </padding>
                  </VBox>
               </content>
            </Tab>
            <Tab closable="false" 
                 text="Sound Effects">
              <content>
                  <VBox spacing="50.0">
                     <children>
                        <RadioButton styleClass="choirButton" 
                                     onAction="#handleChoirAction" 
                                     text="Choir" 
                                     toggleGroup="$instrumentsRadioButton" />
                        <RadioButton styleClass="typewriterButton" 
                                     onAction="#handleTypewriterAction" 
                                     text="Typewriter" 
                                    toggleGroup="$instrumentsRadioButton" />
                        <RadioButton onAction="#handleSeaAction" 
                                     text="Sea" 
                                     toggleGroup="$instrumentsRadioButton" />
                        <RadioButton styleClass="applauseButton" 
                                     onAction="#handleApplauseAction" 
                                     text="Applause" 
                                     toggleGroup="$instrumentsRadioButton" />
                     </children>
                     <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="20.0" />
                     </padding>
                  </VBox>
              </content>
            </Tab>
         </tabs>
      </TabPane>
   </left>
</BorderPane>
