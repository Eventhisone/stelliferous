<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.shape.Line?>

<BorderPane stylesheets="@/tunecomposer/TuneComposer.css" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.TuneComposerNoteSelection">
   <center>
      <ScrollPane fx:id="compositionScroll">
         <content>
            <AnchorPane fx:id="rectStackPane" layoutY="30.0" prefHeight="1280.0" prefWidth="2000.0">
               <children>           
                    <Pane fx:id="compositionGrid" onMouseDragged="#gridDrag" onMousePressed="#gridClick" onMouseReleased="#gridRelease" prefHeight="1280.0" prefWidth="2000.0">
                     <children>
                        <fx:include source="TuneComposerBackground.fxml" />
                        <Line fx:id="redLine" endX="0.0" endY="1280.0" startX="0.0" startY="0.0" styleClass="redLine" />                                   
                     </children>
                    </Pane>
                        
                    </children>
            </AnchorPane>
            </content>
            
        </ScrollPane>
    </center>
    <top>
        <MenuBar BorderPane.alignment="CENTER">
            <menus>
                <Menu text="File">
                    <items>
                        <MenuItem fx:id="ExitButton" accelerator="Shortcut+Q" onAction="#handleExitAction" text="Exit" />
                    </items>
                </Menu>
            <Menu mnemonicParsing="false" text="Edit">
              <items>
                <MenuItem accelerator="Shortcut+A" onAction="#handleSelectAllAction" text="Select All" />
                <MenuItem accelerator="Shortcut+D" onAction="#handleDeleteAction" text="Delete" />
                <MenuItem accelerator="Shortcut+C" onAction="#handleClearAction" text="Clear" />  
              </items>
            </Menu>
                <Menu text="Action">
                    <items>
                        <MenuItem fx:id="PlayButton" accelerator="Shortcut+P" onAction="#handlePlayAction" text="Play" />
                        <MenuItem fx:id="StopButton" accelerator="Shortcut+S" onAction="#handleStopAction" text="Stop" />
                    </items>
                </Menu>
            </menus>
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
        </MenuBar>
    </top>
   <left>
      <TabPane BorderPane.alignment="CENTER">
         <BorderPane.margin>
            <Insets top="10.0" />
         </BorderPane.margin>
         <tabs>
            <Tab closable="false" text="Instruments">
               <content>
                  <VBox spacing="50.0">
                     <children>
                        <RadioButton styleClass="pianoButton" mnemonicParsing="false" onAction="#handlePianoAction" selected="true" text="Piano">
                           <toggleGroup>
                              <ToggleGroup fx:id="instrumentsRadioButton" />
                           </toggleGroup>
                        </RadioButton>
                        <RadioButton styleClass="harpsichordButton"  onAction="#handleHarpsichordAction" text="Harpsichord" textFill="LAWNGREEN" toggleGroup="$instrumentsRadioButton" />
                        <RadioButton styleClass="marimbaButton"  onAction="#handleMarimbaAction" text="Marimba" textFill="SEAGREEN" toggleGroup="$instrumentsRadioButton" />
                        <RadioButton styleClass="organButton"  onAction="#handleOrganAction" text="Organ" textFill="LIGHTSKYBLUE" toggleGroup="$instrumentsRadioButton" />
                        <RadioButton styleClass="accordionButton" onAction="#handleAccordionAction" text="Accordion" textFill="AQUA" toggleGroup="$instrumentsRadioButton" />
                        <RadioButton styleClass="guitarButton" onAction="#handleGuitarAction"  text="Guitar" textFill="DEEPSKYBLUE" toggleGroup="$instrumentsRadioButton" />
                        <RadioButton styleClass="violinButton" onAction="#handleViolinAction" text="Violin" textFill="STEELBLUE" toggleGroup="$instrumentsRadioButton" />
                        <RadioButton styleClass="frenchHornButton"  onAction="#handleFrenchHornAction" text="French Horn" textFill="PURPLE" toggleGroup="$instrumentsRadioButton" />
                     </children>
                     <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="20.0" />
                     </padding>
                  </VBox>
               </content>
            </Tab>
            <Tab closable="false" text="Sound Effects">
              <content>
                  <VBox spacing="50.0">
                     <children>
                        <RadioButton styleClass="choirButton" onAction="#handleChoirAction" text="Choir" textFill="ORANGERED" toggleGroup="$instrumentsRadioButton" />
                        <RadioButton styleClass="typewriterButton" onAction="#handleTypewriterAction" text="Typewriter" textFill="GREY" toggleGroup="$instrumentsRadioButton" />
                        <RadioButton onAction="#handleSeaAction" text="Sea" toggleGroup="$instrumentsRadioButton" />
                        <RadioButton styleClass="applauseButton" onAction="#handleApplauseAction" text="Applause" textFill="SADDLEBROWN" toggleGroup="$instrumentsRadioButton" />
                     </children>
                     <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="20.0" />
                     </padding>
                  </VBox>
              </content>
            </Tab>
         </tabs>
      </TabPane>
   </left>
</BorderPane>
