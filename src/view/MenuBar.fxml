<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.SeparatorMenuItem?>
<?import javafx.scene.layout.BorderPane?>

<MenuBar BorderPane.alignment="CENTER" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8.0.111" fx:controller="controller.MenuBarController">
            <menus>
                <Menu text="File">
                    <items>
                        <MenuItem fx:id="ExitButton" accelerator="Shortcut+Q" onAction="#handleExitAction" text="Exit" />
                    </items>
                </Menu>
            <Menu text="Edit">
              <items>
                <MenuItem fx:id="undoAction" accelerator="Shortcut+Z" onAction="#handleUndoAction" text="Undo" /> 
                <MenuItem fx:id="redoAction" accelerator="Shortcut+Y" onAction="#handleRedoAction" text="Redo" />
            <SeparatorMenuItem mnemonicParsing="false" />
                <MenuItem fx:id="selectAllAction" accelerator="Shortcut+A" onAction="#handleSelectAllAction" text="Select All" />
                <MenuItem fx:id="deleteAction" accelerator="backspace" onAction="#handleDeleteAction" text="Delete" />
                <MenuItem fx:id="groupAction" accelerator="Shortcut+G" onAction="#handleGroupAction" text="Group" />
                <MenuItem fx:id="ungroupAction" accelerator="Shortcut+U" onAction="#handleUngroupAction" text="Ungroup" />  
                <MenuItem fx:id="ungroupAllAction" accelerator="Shortcut+N" onAction="#handleUngroupAllAction" text="Ungroup All" />
              </items>
            </Menu>
                <Menu text="Action">
                    <items>
                        <MenuItem fx:id="playButton" accelerator="Shortcut+P" onAction="#handlePlayAction" text="Play" />
                        <MenuItem fx:id="stopButton" accelerator="Shortcut+S" onAction="#handleStopAction" text="Stop" />
                    </items>
                </Menu>
                <Menu text="Beats">
                    <items>
                        <MenuItem fx:id = "bigBeat" onAction = "#handleBeat1Action" text = "Add A Beat" />
                    </items>
                </Menu>
            </menus>
         <opaqueInsets>
            <Insets />
         </opaqueInsets>
</MenuBar>
